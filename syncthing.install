post_install() {
echo -e "Enable and start the service. Replace “myuser” with the actual Syncthing user after the @:\n-----------------------------------------\nsystemctl enable syncthing@myuser.service\nsystemctl start syncthing@myuser.service\n-----------------------------------------\nThe admin GUI starts automatically and remains available on http://localhost:8384/"
}

post_upgrade() {
    echo -e "In order to load the updated version of syncthing it's necessary to restart the service\n-----------------------------------------\nsystemctl daemon-reload\nsystemctl restart syncthing@myuser.service\n-----------------------------------------\nReplace “myuser” with the actual Syncthing user"
}
